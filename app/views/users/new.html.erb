
<div class="container" >
<h1 class="action-title">Sign Up!</h1>

<%= form_for :user, url: '/users' do |f| %>

  User name: <%= f.text_field :name %>
  Password: <%= f.password_field :password %>
  Password Confirmation: <%= f.password_field :password_confirmation %>
  <%= f.submit "Submit" %>
  <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
<% end %>

<h1 class="action-title">Login</h1>

<%= form_tag '/login' do %>

  User Name: <%= text_field_tag :name %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %>


<div id="slothy">
   <img src="http://www.iconsplace.com/icons/preview/white/sloth-256.png"
   alt="slothy the sloth">
 </div>
</div>
